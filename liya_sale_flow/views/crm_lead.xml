<odoo>
    <record id="view_crm_lead_form_inherit_wedding" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.wedding</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="(//group)[7]" position="after">
                <group colspan="2">
                    <group string="Wedding Information">
                        <field name="request_date"/>
                        <field name="wedding_type"/>
                        <field name="people"/>
                    </group>
                    <group string="Wedding Date" >
                        <field name="wedding_year"/>
                        <field name="option1"/>
                        <field name="option2"/>
                        <field name="option3"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="second_contact"/>
            </xpath>
            <xpath expr="//field[@name='function']" position="before">
                <field name="second_mail" widget="email"/>
            </xpath>
            <xpath expr="//field[@name='function']" position="after">
                <field name="second_job_positino"/>
                <field name="second_phone" widget="phone"/>
            </xpath>
        </field>
    </record>
</odoo>
