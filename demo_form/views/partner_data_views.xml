        <field name="name">confirmed.form.list</field>
        <field name="model">confirmed.form</field>
        <field name="arch" type="xml">
            <list string="Confirmed Form" default_order="project_id,name">
                <field name="name"/>
                <field name="date"/>
                <field name="project_id" optional="hide"/>
                <field name="form_name" column_invisible="1"/>
                <field name="confirmed_demo_form" widget="binary" filename="form_name"/>
            </list>
        </field>
    </record>

<record id="view_confirmed_form_form" model="ir.ui.view">
  <field name="name">confirmed.form.form</field>
  <field name="model">confirmed.form</field>
  <field name="arch" type="xml">
    <form string="Onaylı Form">
      <sheet class="o_form_sheet_bg">

        <!-- Başlık -->
        <div class="oe_title">
          <label for="name" class="oe_edit_only"/>
          <h1>
            <field name="name" placeholder="Form adı"/>
          </h1>
        </div>

        <!-- Üst bilgi alanları -->
        <group col="4">
          <field name="date" readonly="1"/>
          <field name="project_id" invisible="1"/>
          <field name="form_name" invisible="1" readonly="1"/>
        </group>

        <separator string="Form Önizleme" colspan="4"/>

        <group col="4">
          <field name="confirmed_demo_form"
                 widget="pdf_viewer"
                 filename="form_name"
                 nolabel="1"
                 colspan="4"
                 class="o_pdf_card"
                 style="min-height:78vh;"
          readonly="1"/>
        </group>
      </sheet>
    </form>
  </field>
</record>





