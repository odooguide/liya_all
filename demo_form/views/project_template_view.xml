<odoo>
    <record id="view_project_project_demo_inherit" model="ir.ui.view">
        <field name="name">view.project.project.demo.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <header>
                <button name="action_schedule_meeting"
                        string="Assing Demo Date"
                        type="object"
                        class="btn-secondary"
                />
            </header>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="next_event_date" invisible="1"/>
                <field name="next_event_id" invisible="1"/>
                <field name="event_ids" invisible="1"/>
                <field name="seat_plan" widget="binary"
                       filename="seat_plan_name"
                       context="{'bin_size': True}"/>
                <field name="seat_plan_name" invisible="1"/>
                <field name="dj_person" placeholder="SeÃ§iniz..."/>
            </xpath>
            <xpath expr="//button[@name='action_view_tasks']" position="after">
                <button name="action_view_next_event" string="Demo Meeting" type="object" class="oe_stat_button"
                        icon="fa-calendar" invisible="not event_ids">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Demo Tarihi:</span>
                        <field name="next_event_date" class="o_stat_value" invisible="not next_event_date" />
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='date_start']" position="replace">
                <field name="event_date"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_project_share_button_invisible" model="ir.ui.view">
        <field name="name">view.project.project.share.button.invisible</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_share_project_wizard']" position="replace"/>
            <xpath expr="//button[@name='action_customer_preview']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="project_project_form_inherit_so_summary" model="ir.ui.view">
        <field name="name">project.project.so.summary</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description']" position="before">
                <page string="Sale Order Infos">
                    <field name="sale_order_summary" widget="html" readonly="1" colspan="2"/>
                </page>
            </xpath>
        </field>
    </record>
    <record id="inherit_project_list_view_crm_inherit" model="ir.ui.view">
        <field name="name">project.project.list.group.stage.add.crm.fields</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_list_view_group_stage"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="so_opportunity_id"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="crm_second_contact"/>
                <field name="dj_person"/>
                <field name="event_date"/>
                <field name="crm_yabanci_turk"/>
                <field name="so_people_count"/>
                <field name="so_sale_template_id"/>
                <field name="so_coordinator_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//field[@name='stage_id']" position="replace">
                <field name="demo_state"/>
                <field name="next_event_date" string="Demo Tarihi"/>
            </xpath>
        </field>
    </record>
</odoo>