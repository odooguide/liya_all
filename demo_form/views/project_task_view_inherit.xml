<odoo>
    <record id="view_project_task_email_inherit" model="ir.ui.view">
        <field name="name">view.project.task.email.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <header>
                <button name="action_send_task_email"
                        string="Send E-mail"
                        type="object"
                        class="btn-primary"
                        invisible="communication_type=='phone'"/>


            </header>

            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="email_template_id"/>
                <field name="communication_type"/>
                <field name="task_tags"/>

            </xpath>

        </field>
    </record>

   <record id="action_project_task_pivot" model="ir.actions.act_window">
    <field name="name">Görevler Pivot</field>
    <field name="res_model">project.task</field>
    <field name="view_mode">pivot</field>
    <field name="target">current</field>
</record>

<menuitem id="menu_project_task_pivot"
          name="Görevler Pivot"
          parent="project.menu_project_report"
          action="action_project_task_pivot"
          sequence="20"
          groups="base.group_system"/>

</odoo>