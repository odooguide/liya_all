<odoo>
    <record id="view_update_tasks_wizard_form" model="ir.ui.view">
      <field name="name">sale.order.update.tasks.wizard.form</field>
      <field name="model">sale.order.update.tasks.wizard</field>
      <field name="arch" type="xml">
        <form string="Görevleri Güncelle">
          <sheet>
            <group>
              <field name="sale_order_id" readonly="1"/>
              <field name="project_id" readonly="1"/>
            </group>
            <group string="Eklenecek Görevler">
              <field name="line_ids">
                <list editable="bottom">
                  <field name="name"/>
                  <field name="stage_id"/>
                  <field name="planned_date"/>
                  <field name="date_line"/>
                  <field name="days"/>
                  <field name="deadline_date"/>
                  <field name="user_ids" widget="many2many_tags"/>
                  <field name="optional_product_id"/>
                  <field name="communication_type"/>
                  <field name="email_template_id"/>
                </list>
              </field>
            </group>
          </sheet>
          <footer>
            <button string="İptal" class="btn-secondary" special="cancel"/>
            <button name="action_confirm" string="Oluştur" type="object" class="btn-primary"/>
          </footer>
        </form>
      </field>
    </record>
</odoo>